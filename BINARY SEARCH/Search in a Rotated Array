CODE -

//{ Driver Code Starts
#include <bits/stdc++.h>
using namespace std;

// } Driver Code Ends
class Solution{
    public:
    int search(int A[], int l, int h, int key){
        // l: The starting index
        // h: The ending index, you have to search the key in this range
        
        //complete the function here
        
        int n=h-l+1;

        for(int i=0;i<n;i++){

            if(A[i]==key){

                return i;

            }

        }

        return -1;
        
    }
};
