CODE -

//{ Driver Code Starts
#include <bits/stdc++.h>
using namespace std;

// } Driver Code Ends
class Solution{
public:
    int findMin(int arr[], int n){
        //complete the function here
        
        int ans = arr[0];
        
        for(int i=0;i<n;i++)
        {
            if(arr[i]< ans)
            {
                ans = arr[i];
            }
        }
        return ans;
    }
};
