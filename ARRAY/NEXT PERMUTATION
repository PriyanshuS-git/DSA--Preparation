class Solution{
public:
    vector<int> nextPermutation(int N, vector<int> arr){
        // code here
        bool res = next_permutation(arr.begin(),arr.end());
        
       if(res)
       {
           return arr;
       }
       else{
           sort(arr.begin(),arr.end());
           return arr;
           
       }
         
    }    
      
};



