CODE - 

//{ Driver Code Starts
//Initial Template for C++

#include <bits/stdc++.h>
using namespace std;

// } Driver Code Ends
//User function Template for C++

class Solution
{
public:
    int largest(vector<int> &arr, int n)
    {
        int res = 0;
        for(int i = 0; i<n;i++)
        {
            if(arr[i] > arr[res])
               res = i;
        }
        return arr[res];
    }
};



