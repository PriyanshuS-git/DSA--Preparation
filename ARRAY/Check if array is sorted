#include <bits/stdc++.h>
using namespace std;

// } Driver Code Ends
// User function template for C++

class Solution {
  public:
    bool arraySortedOrNot(int arr[], int n) {
        // code here
         for (int i = 1; i < n; i++) {
    if (arr[i] < arr[i - 1])
      return 0;
  }

  return 1;
        
    }
