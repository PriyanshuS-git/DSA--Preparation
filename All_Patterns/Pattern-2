code:

//{ Driver Code Starts
#include <bits/stdc++.h>

using namespace std;

// } Driver Code Ends
class Solution {
  public:
    void printTriangle(int n) {
        // code here
        
        for(int i=0;i<n;i++)
        {
            for(int j=0;j<=i;j++)
            { 
                cout<<"* ";
            }
            cout<<endl;
        }
        
    }
};
