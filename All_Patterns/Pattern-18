PATTERN:
E
E D
E D C
E D C B
E D C B A

CODE:

class Solution {
  public:
    void printTriangle(int n) {
        // code here
        int var;
        for(int row=1;row<=n ; row++)
        {
            var =65+n;
            for(int col=1;col<=row;col++)
            {
                  var--;
                cout<<char(var)<<" ";
               
            }
            cout<<endl;
        }
    }
};
